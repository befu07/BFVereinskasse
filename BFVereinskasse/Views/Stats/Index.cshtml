<script>
    const ctx = document.getElementById('myChart');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Model.Names),
            datasets: [{
                label: 'Zahlungen',
                data: @Html.Raw(Model.Amounts),
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>